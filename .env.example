# Environment Configuration Example
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# CORS Configuration
ALLOWED_ORIGINS=https://localhost:3000,https://yourdomain.com

# Authentication (handled by AWS API Gateway)
# API_KEY_HEADER - No longer needed, handled by API Gateway
# VALID_API_KEYS - No longer needed, handled by API Gateway
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# File Upload Limits
MAX_FILE_SIZE_MB=25
ALLOWED_FILE_TYPES=application/pdf,application/x-pdf

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# AWS Configuration
AWS_REGION=us-east-1

# Domain Configuration (for custom domain)
DOMAIN_NAME=api.yourdomain.com
CERTIFICATE_NAME=*.yourdomain.com